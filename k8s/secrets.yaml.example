# ⚠️ זהו קובץ דוגמה - אל תעלה את הקובץ האמיתי ל-Git!
# העתק את הקובץ הזה ל-secrets.yaml והגדר את הערכים האמיתיים

apiVersion: v1
kind: Secret
metadata:
  name: eli-maor-secrets
type: Opaque
stringData:
  database-url: "postgresql+psycopg2://user:password@rds-endpoint:5432/eli_maor"
  redis-url: "redis://elasticache-endpoint:6379/0"
  secret-key: "your-super-secret-key-min-32-chars"
  google-client-id: "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com"
  google-client-secret: "YOUR_GOOGLE_CLIENT_SECRET"
  vapid-public-key: "BASE64_PUBLIC_KEY"
  vapid-private-key: "BASE64_PRIVATE_KEY"

# יצירת Secret:
# kubectl create secret generic eli-maor-secrets \
#   --from-literal=database-url='postgresql+psycopg2://...' \
#   --from-literal=redis-url='redis://...' \
#   --from-literal=secret-key='...' \
#   --from-literal=google-client-id='...' \
#   --from-literal=google-client-secret='...' \
#   --from-literal=vapid-public-key='...' \
#   --from-literal=vapid-private-key='...'
